<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".Add_student_activity">


    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto_medium"
        android:text="Find a Student and Send invite to join your class"
        android:textColor="@color/deepTextColor"
        android:textSize="@dimen/_14ssp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:strokeColor="@color/borderColor"
        app:strokeWidth="0.3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_search_24" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@null"
                android:hint="Search Phone Or Email Or Name"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>
    <include layout="@layout/add_student_custom_card"/>


</LinearLayout>